# =============================================================================
# ClipCraft Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
#
# Docker:  docker compose up --build (uses these values automatically)
# Local:   Update DATABASE_URL to point to your local PostgreSQL instance
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# AI Provider API Keys (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# CORS - Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# Database
# Docker:  postgresql://postgres:postgres@localhost:5433/clipcraft
# Local:   postgresql://user:password@localhost:5432/clipcraft
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/clipcraft
